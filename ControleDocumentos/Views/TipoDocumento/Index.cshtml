                    "first": "Primeiro",
                    "last": "Último",
                    "next": "Próximo",
                }
            }
        });

        $(document).on("click", ".btnCadastro", function () {
            $.ajax({
                url: $(this).attr("url"),
                type: 'GET',
                success: function (data) {
                    $("#divModalGlobalBody").html(data);
                    $("#divModalGlobal").modal("show");
                },
                error: function () {
                    alert("erro")
                }
            });
        });

        $(document).on("click", ".btnExclusao", function () {
