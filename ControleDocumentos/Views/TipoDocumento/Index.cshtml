@model List<ControleDocumentosLibrary.TipoDocumento>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/Scripts/PageScripts/TipoDocumento.js")

<h2>Tipos de Documento</h2>
<div class="text-right">
    <button class="btn btn-primary btnCadastro" id="btnCadastro" url="@Url.Action("CarregaModalCadastro","TipoDocumento")">Cadastrar novo</button>

</div>

<div class="row">
    <div class="box">
        <div class="box-content">
            <table id="tipoDocTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tipoDoc in Model)
                    {
                        <tr>
                            <td>@tipoDoc.TipoDocumento1</td>
                            <td class="center">
                                <a class="btn btn-info" href="#">
                                    <i class="fa fa-edit btnCadastro" url="@Url.Action("CarregaModalCadastro","TipoDocumento", new { idTipo = tipoDoc.IdTipoDoc })"></i>
                                </a>
                                <a class="btn btn-danger" href="#">
                                    <i class="fa fa-trash-o btnExclusao" url="@Url.Action("CarregaModalExclusao","TipoDocumento", new { idTipo = tipoDoc.IdTipoDoc })"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>