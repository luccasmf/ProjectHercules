@model List<ControleDocumentosLibrary.Evento>
@{
    ViewBag.Title = "Meus eventos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/Scripts/PageScripts/Evento.js")

<div class="divList">
    <h1>Meus eventos</h1>
    <br />

    <form action="@Url.Action("ListAluno", "Evento")" method="get" class="form-filter">
        <div class="box">
            <div class="box-header">
                <h2>Filtro</h2>
                <div class="box-icon">
                    <a class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                </div>
            </div>
            <div class="box-content">
                <div class="form-group row">
                    <div class="col-md-6">
                        @Html.Label("Nome")
                        @Html.TextBox("NomeEvento", string.Empty, new { @class = "form-control" })
                    </div>
                    <div class="col-md-6">
                        @Html.CheckBox("ApenasInscritos",false)
                        <label for="ApenasInscritos">Apenas eventos que estou inscrito</label>
                    </div>
                </div>
            </div>
        </div>


        <div class="text-right">
            <button type="submit" class="btn btn-primary btnPesquisar" id="btnPesquisar">Pesquisar</button>
        </div>
    </form>

    <div class="row">
        <div class="box">
            <div class="box-content partialList">
                @Html.Partial("_List", Model)
            </div>
        </div>
    </div>
</div>

<div class="divFormSave" style="display:none">
    <div class="formSave">
    </div>
</div>