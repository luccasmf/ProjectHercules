@model ControleDocumentosLibrary.Documento

<h1>Cadastro de documento</h1>
<br/>

@using (Html.BeginForm("SalvarDocumento", "Documento", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "frm-submit" }))
{
    @Html.HiddenFor(x => x.IdDocumento)
    <div class="form-group row">
        <div class="col-md-6">
            @Html.Label("Curso*")
            @Html.DropDownListFor(x => x.AlunoCurso.IdCurso, (SelectList)ViewBag.Cursos, "Selecione", new { @id = "ddlCurso", @class = "form-control", @required = "required", @url = Url.Action("GetAlunosByIdCurso", "Documento") })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6">
            @Html.Label("Aluno*")
            @Html.DropDownListFor(x => x.AlunoCurso.IdAluno, (SelectList)ViewBag.Alunos, new { @id = "ddlAluno", @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(x => x.AlunoCurso.IdAluno)
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6">
            @Html.Label("Tipo de documento*")
            @Html.DropDownListFor(x => x.IdTipoDoc, (SelectList)ViewBag.TiposDoc, "Selecione", new { @class = "form-control", @required = "required" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6">
            @Html.Label("Arquivo*")
            <div class="fileinput fileinput-new" data-provides="fileinput">
                <input id="uploadFile" name="uploadFile" type="file" class="filestyle" data-buttontext="Procurar">
            </div>
        </div>
    </div>

    <div class="text-right">
        <a type="button" class="btn btn-default btnCancelar" url="@Url.Action("Index", "Documento")">Voltar</a>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
}

