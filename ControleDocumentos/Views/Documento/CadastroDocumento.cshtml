@model ControleDocumentosLibrary.Documento
@{
    ViewBag.Title = "CadastroDocumento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cadastro de documento</h1>

<form action="@Url.Action("SalvarDocumento", "Documento")" method="post" id=frmDoc>
    @Html.HiddenFor(x => x.IdDocumento)
    <div class="form-group row">
        <div class="col-md-6">
            @Html.Label("Curso*")
            @Html.DropDownListFor(x => x.AlunoCurso.IdCurso, (SelectList)ViewBag.Cursos, "Selecione", new { @class = "form-control", @required="required" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6">
            @Html.Label("Aluno*")
            @Html.DropDownListFor(x => x.AlunoCurso.IdAluno, (SelectList)ViewBag.Alunos, new { @class = "form-control", @required = "required" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6">
            @Html.Label("Tipo de documento*")
            @Html.DropDownListFor(x => x.IdTipoDoc, (SelectList)ViewBag.TiposDoc, "Selecione", new { @class = "form-control", @required = "required" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6">
            @Html.Label("Arquivo*")
            <div class="fileinput fileinput-new" data-provides="fileinput">
                <input name="File" type="file" class="filestyle" data-buttontext="Procurar">
                <br />
                <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 256px; max-width: 200px; max-height: 150px;"></div>
            </div>
        </div>
    </div>

    <div class="text-right">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
</form>
