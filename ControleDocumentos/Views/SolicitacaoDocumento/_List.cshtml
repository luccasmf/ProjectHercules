@model List<ControleDocumentosLibrary.SolicitacaoDocumento>
<form action="@Url.Action("List", "SolicitacaoDocumento")" method="get" class="form-filter">
    <table class="table table-striped table-bordered commmon-datatable">
        <thead>
            <tr>
                <th>Nome do aluno</th>
                <th>Curso</th>
                <th>Tipo de documento</th>
                <th>Status</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sol in Model)
            {
                <tr>
                    <td>@sol.AlunoCurso.Aluno.Usuario.Nome</td>
                    <td>@sol.AlunoCurso.Curso.Nome</td>
                    <td>@sol.Documento.TipoDocumento.TipoDocumento1</td>
                    <td>@(ControleDocumentos.Util.Extension.EnumExtensions.GetEnumDescription(sol.Status))</td>
                    <td class="center">
                        <a class="btn btn-info btnCadastro" href="#" url="@Url.Action("CadastrarSolicitacao","SolicitacaoDocumento", new { idSol = sol.IdSolicitacao })">
                            <i class=@(sol.Status == ControleDocumentosLibrary.EnumStatusSolicitacao.cancelado || sol.Status == ControleDocumentosLibrary.EnumStatusSolicitacao.concluido ? "fa fa-zoom" : "fa fa-edit")></i>
                        </a>
                        @if (sol.Status == ControleDocumentosLibrary.EnumStatusSolicitacao.pendente)
                        {
                            <a class="btn btn-danger btnExclusao" url="@Url.Action("CarregaModalExclusao","SolicitacaoDocumento", new { idSol = sol.IdSolicitacao })" href="#">
                                <i class="fa fa-trash-o"></i>
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>