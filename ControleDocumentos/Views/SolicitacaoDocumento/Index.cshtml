@model List<ControleDocumentosLibrary.SolicitacaoDocumento>
@{
    ViewBag.Title = "Solicitações de documentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/Scripts/PageScripts/SolicitacaoDocumento.js")

<div class="divList">
    <h1>Solicitações de documentos</h1>
    <br />

    <form action="@Url.Action("List", "SolicitacaoDocumento")" method="get" class="form-filter">
        <div class="box">
            <div class="box-header">
                <h2>Filtro</h2>
                <div class="box-icon">
                    <a class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                </div>
            </div>
            <div class="box-content">
                <div class="form-group row">
                    <div class="col-md-6">
                        @Html.Label("Curso")
                        @Html.DropDownList("IdCurso", (SelectList)ViewBag.Cursos, string.Empty, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        @Html.Label("Status")
                        @Html.DropDownList("IdStatus", (SelectList)ViewBag.Status, string.Empty, new { @class = "form-control" })
                    </div>
                </div>

            </div>
        </div>


        <div class="text-right">
            <a type="button" class="btn btn-default btnCadastro" id="btnCadastro" url="@Url.Action("CadastrarSolicitacao","SolicitacaoDocumento")" href="#">Nova solicitação</a>
            <button type="submit" class="btn btn-primary btnPesquisar" id="btnPesquisar">Pesquisar</button>
        </div>
    </form>

    <div class="row">
        <div class="box">
            <div class="box-content partialList">
                @Html.Partial("_List", Model)
            </div>
        </div>
    </div>
</div>

<div class="divFormSave" style="display:none">
    <div class="formSave">
    </div>
</div>