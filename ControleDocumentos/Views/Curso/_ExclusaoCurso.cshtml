@model ControleDocumentosLibrary.Curso

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Exclusão de curso</h4>
    </div>
@using (Html.BeginForm("ExcluirCurso", "Curso", FormMethod.Post, new { @class = "frm-submit-modal" }))
{
    @Html.HiddenFor(x => x.IdCurso)
    <div class="modal-body">
        <div class="form-group">
            @Html.Raw(string.Format("Tem certeza que deseja excluir o curso {0} ?", Model.Nome))
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">Ok</button>
    </div>
}
</div>